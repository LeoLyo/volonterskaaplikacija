<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.random.anagnosti.volonterskaaplikacija.RegisterActivity">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:onClick="registerUser"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignEnd="@+id/cardView"
            android:layout_marginEnd="11dp">

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Submit"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Back" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="#fff"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_below="@+id/editTextEmail"
        android:ems="10"
        android:hint="First Name"
        android:textColor="#fff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextEmail"
        android:layout_below="@+id/editTextFirstName"
        android:ems="10"
        android:hint="Last Name"
        android:textColor="#fff"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_below="@+id/editTextLastName"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#fff"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextAddress"
        android:layout_below="@+id/editTextAddress"
        android:ems="10"
        android:hint="Phone Number"
        android:textColor="#fff"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextPhoneNumber"
        android:layout_below="@+id/editTextPhoneNumber"
        android:ems="10"
        android:hint="Password"
        android:textColor="#fff"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_below="@+id/editTextPassword"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColor="#fff"
        android:inputType="textPassword" />

    <ProgressBar

        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="211dp"
        android:visibility="gone"/>

</RelativeLayout>
