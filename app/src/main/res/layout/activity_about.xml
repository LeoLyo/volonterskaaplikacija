<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    tools:context="com.random.anagnosti.volonterskaaplikacija.MyProfileActivity">


    <RelativeLayout
        android:id="@+id/imeIslika"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="253dp"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:id="@+id/nameSurname"
            android:layout_width="266dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:text="name surname"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="62dp"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/noimage2" />

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:drawableTop="@drawable/kamerica_24dp" />

        <Button
            android:id="@+id/addImage"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/profileImage"
            android:drawableTop="@drawable/slicica_24dp"
            android:onClick="addProfileImage" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/podaci"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imeIslika"
        android:layout_marginTop="-253dp"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/emailAbout"
            android:layout_width="269dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageButton"
            android:layout_weight="1"
            android:text="email"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/addressa"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:text="address"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="phone"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />


    </LinearLayout>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="editProfileInfo"
        android:layout_alignParentEnd="true"
        android:text="EDIT" />

</RelativeLayout>